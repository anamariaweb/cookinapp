<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/principiante"
    android:background="@drawable/cocina"
    tools:context=".Principiante">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        app:cardBackgroundColor="#84FFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.766"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView">

        <TextView
            android:id="@+id/RECETAS"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="RECETAS"
            android:textColor="#8C9EFF"
            android:textSize="24sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        app:cardBackgroundColor="#84FFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.777"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/COOKIN"
            android:layout_width="wrap_content"
            android:layout_height="63dp"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="#8C9EFF"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="COOKIN" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="59dp"
            android:layout_height="match_parent"
            android:layout_marginStart="85dp"
            app:layout_constraintStart_toEndOf="@+id/COOKIN"
            app:srcCompat="@drawable/galletas" />

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/bistec"
        android:layout_width="252dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:onClick="openRecipe"
        android:text="CARNE EN BISTEC"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.44"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/salchipapa"
        app:layout_constraintVertical_bias="0.217" />

    <Button
        android:id="@+id/gelatina"
        android:layout_width="352dp"
        android:layout_height="60dp"
        android:layout_marginTop="44dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:onClick="openRecipe"
        android:text="GELATINA DE COLORES"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="174dp"
        android:layout_height="37dp"
        android:layout_marginTop="32dp"
        android:background="#84FFFF"
        android:text="PRINCIPIANTE"
        android:textColor="#8C9EFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.459"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2" />

    <Button
        android:id="@+id/fideos"
        android:layout_width="274dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:onClick="openRecipe"
        android:text="ARROZ CON FIDEOS"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gelatina" />

    <Button
        android:id="@+id/pasta"
        android:layout_width="252dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:onClick="openRecipe"
        android:text="PASTA CON ATUN"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.453"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fideos" />

    <Button
        android:id="@+id/salchipapa"
        android:layout_width="232dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:onClick="openRecipe"
        android:text="SALCHIPAPA"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pasta" />

</androidx.constraintlayout.widget.ConstraintLayout>