<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/avanzado"
    android:background="@drawable/cociner"
    tools:context=".Avanzado">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="385dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        app:cardBackgroundColor="#7E00BCD4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.766"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView">

        <TextView
            android:id="@+id/RECETAS"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#84FFFF"
            android:gravity="center"
            android:text="RECETAS"
            android:textColor="#8C9EFF"
            android:textSize="24sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="384dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        app:cardBackgroundColor="#84FFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.777"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/COOKIN"
            android:layout_width="wrap_content"
            android:layout_height="63dp"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="#8C9EFF"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="COOKIN" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="57dp"
            android:layout_height="match_parent"
            android:layout_marginStart="80dp"
            android:layout_marginLeft="98dp"
            app:layout_constraintStart_toEndOf="@+id/COOKIN"
            app:srcCompat="@drawable/galletas" />

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/estofado"
        android:layout_width="302dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:onClick="openRecipe"
        android:text="ESTOFADO DE CORDERO"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hamburguesa" />

    <Button
        android:id="@+id/mazamorra"
        android:layout_width="327dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:onClick="openRecipe"
        android:text="MAZAMORRA PAISA"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="146dp"
        android:layout_height="38dp"
        android:layout_marginTop="15dp"
        android:background="#84FFFF"
        android:gravity="center"
        android:text="AVANZADO"
        android:textColor="#8C9EFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2" />

    <Button
        android:id="@+id/conpollo"
        android:layout_width="265dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:onClick="openRecipe"
        android:text="ARROZ CON POLLO"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mazamorra" />

    <Button
        android:id="@+id/carbonara"
        android:layout_width="263dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:onClick="openRecipe"
        android:text="PASTA CARBONARA"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/conpollo" />

    <Button
        android:id="@+id/hamburguesa"
        android:layout_width="231dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:onClick="openRecipe"
        android:text="HAMBURGUESA"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/carbonara" />

</androidx.constraintlayout.widget.ConstraintLayout>